{"ast":null,"code":"\n// Keep the script section unchanged","map":{"version":3,"names":[],"sources":["C:\\Users\\Hedib\\OneDrive\\Bureau\\hello-word-vue\\src\\components\\admin\\AdminUsers.vue"],"sourcesContent":["<template>\n  <div class=\"container py-4\">\n    <div class=\"card shadow-sm border-0\">\n      <div class=\"card-header bg-primary text-white py-3\">\n        <h3 class=\"mb-0\"><i class=\"bi bi-people-fill me-2\"></i>User Management</h3>\n      </div>\n      <div class=\"card-body p-3\">\n        <div class=\"table-responsive\">\n          <table class=\"table table-hover align-middle mb-0\">\n            <thead class=\"table-light\">\n              <tr>\n                <th class=\"ps-3\">ID</th>\n                <th>Name</th>\n                <th>Email</th>\n                <th>Phone</th>\n                <th>Address</th>\n                <th>Image</th>\n                <th>Role</th>\n                <th>Status</th>\n                <th class=\"text-end pe-3\">Actions</th>\n              </tr>\n            </thead>\n            <tbody>\n              <tr v-for=\"user in users\" :key=\"user.id\" class=\"transition-effect\">\n                <td class=\"fw-semibold ps-3\">{{ user.id }}</td>\n                <td>\n                  <input \n                    v-model=\"user.name\" \n                    class=\"form-control form-control-sm focus-highlight\"\n                  >\n                </td>\n                <td class=\"text-truncate\" style=\"max-width: 200px;\">{{ user.email }}</td>\n                <td>\n                  <input \n                    v-model=\"user.phoneNumber\" \n                    class=\"form-control form-control-sm focus-highlight\"\n                    type=\"tel\"\n                  >\n                </td>\n                <td>\n                  <input \n                    v-model=\"user.address\" \n                    class=\"form-control form-control-sm focus-highlight\"\n                  >\n                </td>\n                <td>\n                  <input \n                    v-model=\"user.imageUrl\" \n                    class=\"form-control form-control-sm focus-highlight\"\n                    type=\"url\"\n                  >\n                </td>\n                <td>\n                  <select \n                    v-model=\"user.role\" \n                    class=\"form-select form-select-sm role-select\"\n                  >\n                    <option value=\"ROLE_USER\">User</option>\n                    <option value=\"ROLE_ADMIN\">Admin</option>\n                  </select>\n                </td>\n                <td>\n                  <select \n                    v-model=\"user.status\" \n                    class=\"form-select form-select-sm status-select\"\n                  >\n                    <option value=\"ACTIVE\">Active</option>\n                    <option value=\"INACTIVE\">Inactive</option>\n                  </select>\n                </td>\n                <td class=\"text-end pe-3\">\n                  <div class=\"d-flex gap-2 justify-content-end\">\n                    <button\n                      class=\"btn btn-sm btn-outline-success action-btn\"\n                      @click=\"updateUser(user)\"\n                    >\n                      <i class=\"bi bi-save me-1\"></i>Save\n                    </button>\n                    <button \n                      class=\"btn btn-sm btn-outline-danger action-btn\" \n                      @click=\"deleteUser(user.id)\"\n                    >\n                      <i class=\"bi bi-trash\"></i>\n                    </button>\n                  </div>\n                </td>\n              </tr>\n            </tbody>\n          </table>\n        </div>\n        \n        <div class=\"mt-4 d-flex justify-content-end\">\n          <button \n            class=\"btn btn-outline-secondary\" \n            @click=\"goBack\"\n          >\n            <i class=\"bi bi-arrow-left me-1\"></i>Back\n          </button>\n        </div>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\n// Keep the script section unchanged\n</script>\n\n<style scoped>\n.table-hover tbody tr:hover {\n  background-color: rgba(13, 110, 253, 0.03);\n}\n\n.transition-effect {\n  transition: all 0.2s ease;\n}\n\n.card-header {\n  border-bottom: 2px solid rgba(255, 255, 255, 0.15);\n}\n\n.form-control-sm {\n  max-width: 180px;\n  min-width: 120px;\n}\n\n.form-select-sm {\n  max-width: 120px;\n  min-width: 100px;\n  cursor: pointer;\n}\n\n.role-select option[value=\"ROLE_ADMIN\"] {\n  color: #0d6efd;\n  font-weight: 500;\n}\n\n.status-select option[value=\"ACTIVE\"] {\n  color: #198754;\n}\n\n.status-select option[value=\"INACTIVE\"] {\n  color: #dc3545;\n}\n\n.focus-highlight:focus {\n  border-color: #86b7fe;\n  box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);\n}\n\n.action-btn {\n  padding: 0.3rem 0.75rem;\n  transition: all 0.2s ease;\n  white-space: nowrap;\n}\n\n.action-btn:hover {\n  transform: translateY(-1px);\n}\n\n@media (max-width: 768px) {\n  .table-responsive {\n    border: 1px solid #dee2e6;\n    border-radius: 0.375rem;\n  }\n  \n  .form-control-sm {\n    max-width: 140px;\n  }\n  \n  .action-btn {\n    padding: 0.25rem 0.5rem;\n  }\n  \n  .card-header h3 {\n    font-size: 1.25rem;\n  }\n}\n\n@media (max-width: 576px) {\n  .form-control-sm {\n    max-width: 100px;\n  }\n  \n  .text-truncate {\n    max-width: 120px;\n  }\n  \n  .btn-sm {\n    font-size: 0.75rem;\n  }\n}\n</style>"],"mappings":";AAyGA","ignoreList":[]},"metadata":{},"sourceType":"script","externalDependencies":[]}