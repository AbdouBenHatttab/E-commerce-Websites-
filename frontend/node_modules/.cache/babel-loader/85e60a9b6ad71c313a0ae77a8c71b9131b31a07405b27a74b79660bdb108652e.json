{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport \"core-js/modules/esnext.iterator.map.js\";\nimport ProductService from \"@/services/ProductService\";\nexport default {\n  name: \"VisitorProducts\",\n  data() {\n    return {\n      products: [],\n      itemsPerSlide: 4\n    };\n  },\n  computed: {\n    chunkedProducts() {\n      const chunks = [];\n      for (let i = 0; i < this.products.length; i += this.itemsPerSlide) {\n        chunks.push(this.products.slice(i, i + this.itemsPerSlide));\n      }\n      return chunks;\n    }\n  },\n  async created() {\n    const response = await ProductService.getAllProducts();\n    this.products = response.data.map(p => ({\n      ...p,\n      isWished: false\n    }));\n  },\n  methods: {\n    toggleWishlist(product) {\n      product.isWished = !product.isWished;\n    }\n  }\n};","map":{"version":3,"names":["ProductService","name","data","products","itemsPerSlide","computed","chunkedProducts","chunks","i","length","push","slice","created","response","getAllProducts","map","p","isWished","methods","toggleWishlist","product"],"sources":["C:\\Users\\Hedib\\OneDrive\\Bureau\\final\\hello-word-vue\\src\\components\\VisitorProducts.vue"],"sourcesContent":["<template>\n  <div class=\"container py-5\">\n    <h2>Featured <b>Products</b></h2>\n    <div id=\"productsCarousel\" class=\"carousel slide\" data-bs-ride=\"carousel\">\n      <!-- Indicators -->\n      <ol class=\"carousel-indicators\">\n        <li\n          v-for=\"index in chunkedProducts\"\n          :key=\"index\"\n          data-bs-target=\"#productsCarousel\"\n          :data-bs-slide-to=\"index\"\n          :class=\"{ active: index === 0 }\"\n        ></li>\n      </ol>\n\n      <!-- Carousel Items -->\n      <div class=\"carousel-inner\">\n        <div\n          v-for=\"(chunk, index) in chunkedProducts\"\n          :key=\"index\"\n          class=\"carousel-item\"\n          :class=\"{ active: index === 0 }\"\n        >\n          <div class=\"row\">\n            <div\n              v-for=\"product in chunk\"\n              :key=\"product.id\"\n              class=\"col-lg-3 col-md-6\"\n            >\n              <div class=\"thumb-wrapper\">\n                <span class=\"wish-icon\" @click=\"toggleWishlist(product)\">\n                  <i\n                    :class=\"[\n                      'bi',\n                      product.isWished ? 'bi-heart-fill' : 'bi-heart',\n                    ]\"\n                  ></i>\n                </span>\n                <div class=\"img-box\">\n                  <img\n                    :src=\"product.imageUrl\"\n                    class=\"img-fluid\"\n                    alt=\"Product image\"\n                  />\n                </div>\n                <div class=\"thumb-content\">\n                  <h4>{{ product.name }}</h4>\n                  <div class=\"star-rating\">\n                    <i\n                      v-for=\"star in 5\"\n                      :key=\"star\"\n                      class=\"bi\"\n                      :class=\"\n                        star <= product.rating ? 'bi-star-fill' : 'bi-star'\n                      \"\n                    ></i>\n                  </div>\n                  <p class=\"item-price\">\n                    <strike v-if=\"product.originalPrice\"\n                      >${{ product.originalPrice }}</strike\n                    >\n                    <b>${{ product.price }}</b>\n                  </p>\n                  <div class=\"d-grid gap-2\">\n                    <router-link\n                      :to=\"`/product/${product.id}`\"\n                      class=\"btn btn-primary\"\n                    >\n                      <i class=\"bi bi-cart me-2\"></i>Add to Cart\n                    </router-link>\n                  </div>\n                </div>\n              </div>\n            </div>\n          </div>\n        </div>\n      </div>\n\n      <!-- Controls -->\n      <a\n        class=\"carousel-control-prev\"\n        href=\"#productsCarousel\"\n        role=\"button\"\n        data-bs-slide=\"prev\"\n      >\n        <span class=\"carousel-control-prev-icon\" aria-hidden=\"true\"></span>\n        <span class=\"visually-hidden\">Previous</span>\n      </a>\n      <a\n        class=\"carousel-control-next\"\n        href=\"#productsCarousel\"\n        role=\"button\"\n        data-bs-slide=\"next\"\n      >\n        <span class=\"carousel-control-next-icon\" aria-hidden=\"true\"></span>\n        <span class=\"visually-hidden\">Next</span>\n      </a>\n    </div>\n  </div>\n</template>\n\n<script>\nimport ProductService from \"@/services/ProductService\"\n\nexport default {\n  name: \"VisitorProducts\",\n  data() {\n    return {\n      products: [],\n      itemsPerSlide: 4,\n    }\n  },\n  computed: {\n    chunkedProducts() {\n      const chunks = []\n      for (let i = 0; i < this.products.length; i += this.itemsPerSlide) {\n        chunks.push(this.products.slice(i, i + this.itemsPerSlide))\n      }\n      return chunks\n    },\n  },\n  async created() {\n    const response = await ProductService.getAllProducts()\n    this.products = response.data.map((p) => ({ ...p, isWished: false }))\n  },\n  methods: {\n    toggleWishlist(product) {\n      product.isWished = !product.isWished\n    },\n  },\n}\n</script>\n\n<style scoped>\n.carousel {\n  margin: 50px auto;\n  padding: 0 20px;\n}\n\n.thumb-wrapper {\n  padding: 25px 15px;\n  background: #fff;\n  border-radius: 6px;\n  text-align: center;\n  position: relative;\n  box-shadow: 0 2px 3px rgba(0, 0, 0, 0.2);\n  margin-bottom: 30px;\n}\n\n.img-box {\n  height: 200px;\n  margin-bottom: 20px;\n  width: 100%;\n  position: relative;\n}\n\n.img-box img {\n  max-width: 100%;\n  max-height: 100%;\n  display: inline-block;\n  position: absolute;\n  bottom: 0;\n  margin: 0 auto;\n  left: 0;\n  right: 0;\n}\n\n.thumb-content h4 {\n  font-size: 1.1rem;\n  margin-bottom: 0.5rem;\n}\n\n.star-rating {\n  color: #ffc000;\n  margin-bottom: 0.5rem;\n}\n\n.item-price {\n  font-size: 1.25rem;\n  margin-bottom: 1rem;\n}\n\n.item-price strike {\n  opacity: 0.7;\n  margin-right: 0.5rem;\n  font-size: 0.9em;\n}\n\n.wish-icon {\n  position: absolute;\n  right: 10px;\n  top: 10px;\n  z-index: 99;\n  cursor: pointer;\n  font-size: 1.25rem;\n  color: #abb0b8;\n}\n\n.wish-icon .bi-heart-fill {\n  color: #ff6161;\n}\n\n.carousel-control-prev,\n.carousel-control-next {\n  width: 40px;\n  height: 40px;\n  background: #7ac400;\n  border-radius: 4px;\n  opacity: 0.9;\n  top: 50%;\n  transform: translateY(-50%);\n}\n\n.carousel-control-prev:hover,\n.carousel-control-next:hover {\n  opacity: 1;\n  background: #78bf00;\n}\n\n.carousel-indicators [data-bs-target] {\n  width: 10px;\n  height: 10px;\n  border-radius: 50%;\n  margin: 0 4px;\n}\n\n@media (max-width: 992px) {\n  .itemsPerSlide {\n    itemsperslide: 3;\n  }\n}\n\n@media (max-width: 768px) {\n  .itemsPerSlide {\n    itemsperslide: 2;\n  }\n}\n</style>\n"],"mappings":";;AAsGA,OAAOA,cAAa,MAAO,2BAA0B;AAErD,eAAe;EACbC,IAAI,EAAE,iBAAiB;EACvBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE,EAAE;MACZC,aAAa,EAAE;IACjB;EACF,CAAC;EACDC,QAAQ,EAAE;IACRC,eAAeA,CAAA,EAAG;MAChB,MAAMC,MAAK,GAAI,EAAC;MAChB,KAAK,IAAIC,CAAA,GAAI,CAAC,EAAEA,CAAA,GAAI,IAAI,CAACL,QAAQ,CAACM,MAAM,EAAED,CAAA,IAAK,IAAI,CAACJ,aAAa,EAAE;QACjEG,MAAM,CAACG,IAAI,CAAC,IAAI,CAACP,QAAQ,CAACQ,KAAK,CAACH,CAAC,EAAEA,CAAA,GAAI,IAAI,CAACJ,aAAa,CAAC;MAC5D;MACA,OAAOG,MAAK;IACd;EACF,CAAC;EACD,MAAMK,OAAOA,CAAA,EAAG;IACd,MAAMC,QAAO,GAAI,MAAMb,cAAc,CAACc,cAAc,CAAC;IACrD,IAAI,CAACX,QAAO,GAAIU,QAAQ,CAACX,IAAI,CAACa,GAAG,CAAEC,CAAC,KAAM;MAAE,GAAGA,CAAC;MAAEC,QAAQ,EAAE;IAAM,CAAC,CAAC;EACtE,CAAC;EACDC,OAAO,EAAE;IACPC,cAAcA,CAACC,OAAO,EAAE;MACtBA,OAAO,CAACH,QAAO,GAAI,CAACG,OAAO,CAACH,QAAO;IACrC;EACF;AACF","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}